<Window x:Class="heritage_rhythm.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:heritage_rhythm"
        mc:Ignorable="d" Height="650" Width="1000" Background="Transparent" 
        WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="loginFrame0" Grid.Column="0" Source="Login_00.xaml" />
        <Frame x:Name="loginFrame1" Grid.Column="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" />
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Grid.ColumnSpan="2">
            <Image Source="/Images/minimize.png" Width="20" Margin="5" MouseUp="MinimizeButton_MouseUp"/>
            <Image Source="/Images/close.png" Width="20" Margin="5" MouseUp="CloseButton_MouseUp"/>
        </StackPanel>
    </Grid>


</Window>
